<% if !current_user.flickr_info %>
  <p></p>
<% else %>
  <h1>Your flickr photos</h1>
  <p>Below are the albums we pulled from your flickr account.</p>

<table border="0" cellspacing="0" cellpadding="0" id="flickr_picker">
  <% @flickr_photosets.each do |photoset| %>
  <tr>
    <td class="album_image">
      <hr style="clear:both"/>
      <h2 class="lessLegroom"><%= photoset.title %> | <%=pluralize(photoset.photo_count, "photo")%></h3>
    </td>
  </tr>
  <tr id="<%=photoset.id%>-photos" class="hidden_row">
    <td style="width:92%">
      <%photoset.photos.each do  |photo| %>
        <%=image_tag(photo.url("s"), :width=>75, :height=>75, :style=>"float:left")%>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
<% end %>
